{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/mocha": "^10.0.5",
    "chai": "^4.3.7",
    "chai-bn": "^0.3.1",
    "eslint": "^8.32.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethereum-waffle": "^3.4.4",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "openzeppelin-test-helpers": "^0.5.1",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "web3": "^1.8.1"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@openzeppelin/contracts": "4.8.1",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "bn.js": "^5.2.0",
    "dotenv": "^16.0.3",
    "eslint-config-prettier": "^8.6.0",
    "hardhat": "^2.14.0",
    "hex-to-dec": "^1.0.1",
    "moment": "^2.29.4",
    "solidity-docgen": "^0.6.0-beta.35"
  },
  "scripts": {
    "prettier": "prettier --config .prettierrc --write 'test/**/*.ts' 'scripts/**/*.ts'",
    "lint": "solhint 'contracts/**/*.sol' && eslint . --ext .ts",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix && eslint . --ext .ts --fix",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "verify": "hardhat verify",
    "docs": "solidity-docgen"
  }
}
